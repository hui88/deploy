<%= stylesheet_link_tag 'user'%>
<div class="keyword">
    <div class="keyword1"></div>
    <div class="keyword2"></div>
    当前位置:
            <a href="/store">首页</a> &gt;
            <a href="/users/<%=current_user.id %>">个人中心</a> &gt;
                用户概况        </div>

<div class="content">
  <div class="totline"></div>
  <div class="botline"></div>
  <%= render :partial => "shared/user_left", :object => @user %>
  <div id="right">
        <div class="wrap_line margin1" style="height:180px">
            <div class="public">
                <div class="information_index">
                    <div class="photo">
                        <p><img width="120" height="120" alt="" src="/images/noavatar_0_middle.gif"></p>
                    </div>

                    <div class="info">
                        <h3 class="margin2">
                            <span>欢迎您，<%= @user.name %></span>
                            <a href="/users/<%= current_user.id%>/edit">编辑个人资料&gt;&gt;</a>
                        </h3>
                        <table class="width6">
                            <tbody><tr>
                                <td>上次登录时间: <%= @user.last_sign_in_at %></td>
                            </tr>
                            <tr>
                                <td>上次登录 IP:<%= @user.last_sign_in_ip %></td>
                            </tr>
                        </tbody></table>
                        <p>您有 <span class="red"><%= current_user.products.size%></span> 件商品，<a href="/users/<%=current_user.id%>/products">点击查看</a></p>
                    </div>
                </div>
                

            </div>
            <div class="wrap_bottom"></div>
        </div>
        <div class="wrap_line">
            <div class="public_index">
                <div class="information_index">
                    <h3 class="title">卖家提醒
                        <p style="font-size: 14px; color: rgb(102, 102, 102);">
                        <span>店铺等级: <b style="color: rgb(84, 152, 51);">小商铺</b></span>
                        <span>有效期: 不限制</span>
                        <span>商品发布:<%= current_user.products.size%></span>
                        </p>
                    </h3>
                    
                    
                    
                    <div class="remind">
                        <dl>
                            <dt>订单提醒</dt>
                            <dd>您有 <span class="red"><%=current_user.orders.size%></span>个订单</dd>
                            <dd>您有 <span class="red"><%= current_user.products.size%></span>个商品</dd>
                        </dl>
                        <a class="btn1 pos2" target="_blank" title="查看我的店铺" href="/users/<%= current_user.id%>/shop"><span class="pic2">查看我的店铺</span></a>
                        <a title="管理我的订单" class="btn pos3" href="/users/<%= current_user.id%>/orders"><span class="pic1">管理我的订单</span></a>
                    </div>
                </div>

            </div>
            <div class="wrap_bottom"></div>
        </div>
        <div class="clear"></div>
        <div class="adorn_right1"></div>
        <div class="adorn_right2"></div>
        <div class="adorn_right3"></div>
        <div class="adorn_right4"></div>
    </div>
  <div class="clear"></div>
</div>
<div style="color: rgb(102, 102, 102);" id="footer">
  <p>
    <a href="/store">首页</a>
  </p>
</div>

