<h1>Editing user</h1>

<% form_for (@user) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name,"Name:" %><br />
    <%= f.text_field :name,:size => 10 %>
  </p>
  <p>
    <%= f.label :sex, "Sex:" %>
    <%=
    f.select :sex,
      User::SEX_TYPE,
      :prompt => "Select one"
    %>
  </p>
  <p>
    <%= f.label :email%><br />
    <%= f.text_field :email,:size => 30%>
  </p>
  <p>
    <%= f.label :phone%><br />
    <%= f.text_field :phone%>
  </p>
  <p>
    <%= f.label :qq,"QQ:"%><br />
    <%= f.text_field :QQ%>
  </p>
  <p>
    <%= f.label :address %><br />
    <%= f.text_area:address,:rows => 3,:cols => 40%>
  </p>
  <p>
    <%= f.label :role, "Role:" %>
    <%=
    f.select :role,
      User::ROLE_TYPE,
      :prompt => "Select one"
    %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @user %> |
<%= link_to 'Back', user_path(params[:id]) %>
