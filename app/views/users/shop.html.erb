<%= stylesheet_link_tag 'shop'%>
<div class="keyword">
    <div class="keyword1"></div>
    <div class="keyword2"></div>
    当前位置:
            <a href="/store">首页</a> &gt;
                <a href="/store/all_shop">全部商店</a>&gt;
                <%= @user.title%>
                        </div>
<div id="content">
  <div id="left">
    <div class="user">
      <div class="user_photo">
        <h2><%= @user.name %>的小商铺</h2>
    </div>

    <div class="user_data">
      <p>
        <span>店主: </span><%= @user.name %>
      </p>
      <p>商品数量: <%= @user.products.size %></p>
      <p>详细地址: <%= @user.address %></p>
      <p>联系电话: <%= @user.phone %></p>
      <p>QQ: <%= @user.QQ %></p>
      <p>创店时间: <%= @user.created_at %></p>
   </div>

    <div class="clear"></div>
    </div>
        <div class="module_sidebar">
            <h2><b>店铺</b></h2>
            <div class="wrap">
              <div class="wrap_child">
                <dl class="sidebar_list">
                  <li>全部店铺</li>
                </dl>
              </div>
            </div>
        </div>
    
    <div class="module_common">
    <h2 class="common_title veins1">
    <div class="ornament1"></div>
    <div class="ornament2"></div>
    <span class="ico1"><span class="ico2">商品分类</span></span>
    </h2>
    <div class="wrap">
    <div class="wrap_child">
    <ul class="submenu">
    <li><a href="/users/<%= @user.id %>/shop" class="none_ico">全部商品</a></li>
    </ul>
    </div>
    </div>
    </div>
  </div>
    
<div id="right">
    	<div class="default" id="xizi_store"></div>
                <div class="module_special">
            <h2 class="common_title veins2">
                <div class="ornament1"></div>
                <div class="ornament2"></div>
                <span class="ico1"><span class="ico2">推荐商品</span></span>
            </h2>
            <div class="wrap">
                <div class="wrap_child">
                  <% if @products.size == 0 %>
                  <div class="nothing"><p style="width: 350px;">非常抱歉！暂时未能找到相关商品</p></div>
                  <%end%>
                    <div class="major">
                        <ul class="list">
                          <% @products.each do |product|%>
                            <li>
                                <div class="pic"><a target="_blank" href="<%= user_product_path(product.user_id,product.id)%>">
                                   <img width="150" height="150" src="<%= product.image.url%>">
                                   </a>
                                </div>
                                <h3><a target="_blank" href="<%= user_product_path(product.user_id,product.id)%>"><%= product.title%></a></h3>
                                <p>￥<%= product.price%></p>
                            </li>
                          <%end %>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
                
        <div class="module_special">
            <h2 class="common_title veins2">
                <div class="ornament1"></div>
                <div class="ornament2"></div>
                <span class="ico1"><span class="ico2">新品</span></span>
            </h2>
            <div class="wrap">
                <div class="wrap_child">
                                        <div class="major">
                        <ul class="list">
                                                  
                                                    </ul>
                    </div>
                                    </div>
            </div>
        </div>
    </div>
</div>
<div style="color: rgb(102, 102, 102);" id="footer">
  <p>
    <a href="/store">首页</a>
  </p>
</div>

