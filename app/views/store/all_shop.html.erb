<div class="keyword">
    <div class="keyword1"></div>
    <div class="keyword2"></div>
    当前位置:
            <a href="/store">首页</a> &gt;
                全部商店 
                        </div>
<div class="content">
    <div class="left">
        <div class="module_sidebar">
            <h2><b>店铺</b></h2>
            <div class="wrap">
              <div class="wrap_child">
                <dl class="sidebar_list">
                  <dt class="bg_color1"><a href="">全部店铺</a></dt>
                </dl>
              </div>
            </div>
        </div>
    </div>

    <div class="right">
        <div class="shop_list">
            <div class="ornament1"></div>
            <div class="ornament2"></div>
            <table>
                <tbody><tr>
                    <th class="align1">店铺</th>
                    <th>商品数量</th>
                    <th class="width2">店主</th>
                    <th id="credit_grade">我的QQ</th>
                    <th class="width2">詳細地址</th>
                </tr>
                <% @users.each do |user|%>
                  <% if user.role == 'member'%>
                   <tr>
                    <td class="width1">
                        <p class="ware_pic">
                          <a href="/users/<%= user.id%>/shop">
                            <img width="65" height="65" src="<%= user.avatar.url%>">
                          </a>
                        </p>
                        <h3>
                            <%= link_to user.title,shop_user_path(user.id)%>
                        </h3>
                    </td>
                    <td class="align2"><%= user.products.size%></td>
                    <td class="align2"><p class="name"><%= user.name%></p>  <%= link_to "去逛逛",shop_user_path(user.id),:class => "email"%> </td>
                    <td class="align2">QQ:<%= user.QQ%></td>
                    <td class="align2"><%=user.address%></td>
                  </tr>
                  <%end%>
                <%end%>
                </tbody>
            </table>
        </div>
    </div>
</div>
<div style="color: rgb(102, 102, 102);" id="footer">
  <p>
    <a href="/store">首页</a>
  </p>
</div>



