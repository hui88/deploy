<div class="widget" widget_type="widget" name="recommended_store" id="_widget_717">
<div class="module_common">
    <h2><b title="SHOPS店辅推荐" class="shops"></b></h2>
    <div class="wrap">
        <div class="wrap_child">
            <ul class="particular">
              <% User.all.each do |user| %>
                <% if user.role == 'member'%>
                <li>
                  <div class="pic">
                    <a href="/users/<%= user.id%>/shop">
                      <img width="65" height="65" src="<%= user.avatar.url%>">
                    </a>
                  </div>
                    <dl>
                      <dt><a title="" href="/users/<%= user.id%>/shop"><%= user.title%></a></dt>
                      <dd>店主:<%= user.name %></dd>
                      <dd>商品:<%= user.products.size%></dd>
                      <dd>QQ:<%= user.QQ%> </dd>
                   </dl>
                </li>
                <% end%>
              <% end %>
                  
           </ul>
        </div>
    </div>
</div>
</div>
    </div>

    <div area="bottom_right" widget_type="area" class="right">
        
<div class="widget" widget_type="widget" name="gcategory_list" id="_widget_364">
<div class="module_common">
    <h2><b title="CATEGORY商品分类" class="category"></b></h2>
    <div class="wrap">
        <div class="wrap_child">
            <div style="margin-top: 2px;" class="assort">
                <div class="assort_wrap">
                  <% i = 1%>
                  <% Group.all.each do |group|%>
                    <dl style="margin-bottom: 8px;">
                      <dt style="line-height: 30px; font-size: 16px;" class="bg_color<%= i %>">
                        <%= link_to group.name, "/store/group?group_id=#{group.id}" %>
                      </dt>
                    </dl>  
                    <% i += 1 ;i = 1 if i == 6 %>
                  <%end%>
               </div>
            </div>
        </div>
    </div>
</div>
</div>

