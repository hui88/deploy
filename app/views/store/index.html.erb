<div class="widget" widget_type="widget" name="recommended_store" id="_widget_717">
<div class="module_common">
    <h2><b title="SHOPS店辅推荐" class="shops"></b></h2>
    <div class="wrap">
        <div class="wrap_child">
            <ul class="particular">
              <% User.all.each do |user| %>
                <li>
                  <div class="pic">
                    <a href="/users/<%= user.id%>">
                      <img width="65" height="65" src="<%= user.image.url%>">
                    </a>
                  </div>
                    <dl>
                      <dt><a title="" href="/users/<%= user.id%>"><%= user.title%></a></dt>
                      <dd>店主:<%= user.name %></dd>
                      <dd>商品:<%= user.products.size%></dd>
                      <dd>QQ:<%= user.QQ%> </dd>
                   </dl>
                </li>
              <% end %>
                  
           </ul>
        </div>
    </div>
</div>
</div>
