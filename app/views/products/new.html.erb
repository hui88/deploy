<script src="http://js.nicedit.com/nicEdit-latest.js" type="text/javascript"></script>
<script type="text/javascript">bkLib.onDomLoaded(nicEditors.allTextAreas);</script>
<%= stylesheet_link_tag 'user'%>
<div class="content">
  <div class="totline"></div>
  <div class="botline"></div>
     <%= render :partial => "shared/user_left", :object => @user %>
<div id="right">
<ul class="tab">
<li class="active">新增商品</li>
</ul>
<div class="wrap1">

<div class="public">
<% form_for @product, :html => { :multipart => true, :id => "goods_form" } do |f| %>
  <%= f.hidden_field :user_id, :value => @user_id %>
<div class="information_index">

<h4>商品分类</h4>
<div class="add_wrap">
<div class="assort">
<p class="txt">商品分类：</p>
<p id="gcategory" class="select">
<%= f.select :type_id, Type::TYPES, :prompt => "Select one" %>
</p>
</div>

<h4>商品基本信息</h4>
<div class="add_wrap">

<div class="products" style="float:left">
<ul>
<li>
<h2>商品名称：</h2>
<div class="arrange">
<%= f.text_field :title, :class=> "text" %>
<span class="red">*</span></div>
</li>
<li>
<h2 ectype="no_spec">价格：</h2>
<div ectype="no_spec" class="arrange">
<%= f.text_field :price , :class=> "text"%>
</div>
</li>
<li ectype="no_spec">
<h2>库存：</h2>
<div class="arrange"><input type="text" class="text" value="" name="stock"></div>
</li>
<li ectype="no_spec">
<h2>图片：</h2>
<div class="arrange">
    <%= f.file_field :image %>
</div>
</li>
<li ectype="no_spec">
<h2>商品描述：</h2>
<div class="arrange">
    <%= f.text_area :description,:rows => 8,:cols => 60 %>
</div>
</li>
<li>
<div class="issuance" style="float:left">
    <%= f.submit 'Create', :class => "btn" %>
</div>
</li>
</ul>
</div>
<div class="clear"></div>
</div>

</div>
</div>
<% end %>
</div>
<div class="wrap_bottom"></div>
        </div>

