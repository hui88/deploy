<h1>New product</h1>

<% form_for @product, :html => { :multipart => true } do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description,:rows => 4,:cols => 40 %>
  </p>
  <p>
    <%= f.label :image_url %><br />
    <%= f.text_field :image_url %>
  </p>
  <p>
    <%= f.label :image %><br />
    <%= f.file_field :image %>
  </p>
  
  <p>
    <%= f.label :price %><br />
    <%= f.text_field :price %>
  </p>
  <p>
    <%= f.label :type_id, "Type:" %>
    <%=
      f.select :type_id,
      Type::TYPES,
      :prompt => "Select one"
    %>
  </p>
  
  <%= f.hidden_field :user_id, :value => @user_id %>
  
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', user_products_path(@user_id)%>
